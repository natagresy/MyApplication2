<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_viewdetail"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/postImageView"
                android:tag="image_tag"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:src="@color/colorAccentDark"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/postTitleView"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Title"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
                <TextView
                    android:id="@+id/rating_detail"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="rating"
                    android:layout_gravity="left"
                    android:fontFamily="sans-serif" />
                <TextView
                    android:id="@+id/cuisine_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="cuisine"
                    android:layout_gravity="left"
                    android:fontFamily="sans-serif" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:padding="5dp"
                    android:layout_marginBottom="10dp">


            <Button
                    android:id="@+id/btn_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/drawablecall"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:text="Call"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:background="@color/colorWhite"/>

                <Button
                    android:id="@+id/btn_route"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/drawableroute"
                    android:textStyle="bold"
                    android:text="Direction"
                    android:textColor="@color/colorText"
                    android:background="@color/colorWhite"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/drawablemarker"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:text="address"
                        android:textColor="@color/colorBlack"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/open_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/drawableclock"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:text="opening hours"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>